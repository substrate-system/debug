{
  "name": "@substrate-system/debug",
  "description": "Debug utility",
  "type": "module",
  "version": "0.9.9",
  "main": "./dist/node.js",
  "files": [
    "./dist/*"
  ],
  "exports": {
    ".": {
      "node": "./dist/node.js",
      "browser": "./dist/browser/index.js",
      "default": "./dist/browser/index.js"
    },
    "./node": "./dist/node.js",
    "./browser": "./dist/browser/index.js"
  },
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test:node": "esbuild ./test/index.ts --format=esm --bundle --platform=node | node --input-type=module",
    "test:browser": "esbuild ./test/test-browser.ts --bundle | npx tapout",
    "test": "npm run test:browser && npm run test:node",
    "build": "mkdir -p dist && rm -rf dist/* && tsc --project tsconfig.build.json",
    "exmaple:node": "npx esbuild --platform=node --bundle ./example/node.ts | DEBUG=\"hello:*\" node",
    "build-example": "vite build",
    "build-docs": "typedoc ./src/browser.ts ./src/node.ts",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "start": "vite --mode=staging",
    "start:ls": "vite --config vite-ls.config.js example-ls",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@substrate-system/util": "^0.1.19",
    "supports-color": "^10.0.0"
  },
  "devDependencies": {
    "@substrate-system/tapout": "^0.0.17",
    "@substrate-system/tapzero": "^0.10.15",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.0",
    "eslint-config-standard": "^17.1.0",
    "http-server": "^14.1.1",
    "markdown-toc": "^1.2.0",
    "tap-spec": "^5.0.0",
    "typedoc": "^0.28.1",
    "typescript": "^5.4.5",
    "vite": "^7.0.1"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/debug.git"
  },
  "keywords": [
    "debug",
    "console",
    "log"
  ],
  "bugs": {
    "url": "https://github.com/substrate-system/debug/issues"
  },
  "homepage": "https://github.com/substrate-system/debug"
}
